if ! command -v spice-vdagent.real >/dev/null 2>/dev/null; then
  echo 'Please install the spice-vdagent package to use this tool.'
  exit 1
fi

export GDK_BACKEND=x11
if [ -z "${DISPLAY:-}" ]; then
  export DISPLAY=':0'
fi

exec spice-vdagent.dist-orig "$@"
